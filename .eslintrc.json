{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
    "no-cond-assign": ["error", "except-parens"],
    "no-return-assign": ["error", "except-parens"],
    "no-plusplus": "off",
    "no-console": ["error", { "allow": ["error"] }],
    "object-curly-newline": ["error", { "consistent": true, "multiline": true }],
    "require-await": "error"
  },
  "overrides": [
    {
      "files": ["test/**/*.js", "lib/**/spec.js"],
      "env": {
        "mocha": true
      },
      "globals": {
        "afterAll": false,
        "appendToBody": false,
        "AccessibilityLinter": false,
        "beforeAll": false,
        "buildHtml": false,
        "createDomWaiter": false,
        "domUtils": false,
        "expect": false,
        "internals": false,
        "mock": false,
        "nextTick": false,
        "ruleSpecs": false,
        "uniqueId": false
      },
      "rules": {
        "no-param-reassign": "off"
      }
    },
    {
      "files": ["lib/**/spec.js"],
      "globals": {
        "domChange": false,
        "linter": false,
        "reporter": false,
        "Rule": false,
        "ruleName": false
      }
    },
    {
      "files": ["webpack.*.js"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
