{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "no-cond-assign": ["error", "except-parens"],
    "no-return-assign": ["error", "except-parens"],
    "no-plusplus": "off",
    "no-console": ["error", { "allow": ["error"] }]
  },
  "overrides": [
    {
      "files": ["test/**/*.js", "lib/**/spec.js"],
      "env": {
        "mocha": true
      },
      "globals": {
        "afterAll": false,
        "AccessibilityLinter": false,
        "beforeAll": false,
        "domUtils": false,
        "expect": false,
        "mock": false,
        "ruleSpecs": false
      }
    },
    {
      "files": ["webpack.*.js"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
